         <label for="hot">پربازدیدترین</label>
          {{#each BestProducts}}
            <div style="background-image: url({{this.image}});"; class="tile best">
               <form action="/{{this._id}}?_method=DELETE" method="POST">
               <input type="submit" value="حذف" >
               <input type="button" onclick="location.href='/product/{{this._id}}';" value="ویرایش" />

               <div class="text">
                  {{this.title}}
               </div>
               <div class="price">
                  {{this.price}} <span>تومان</span>
               </div>
               </form>
            </div>
         {{/each}}
         {{#each NewProducts}}
